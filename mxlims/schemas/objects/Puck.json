{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A puck containing mounted crystals on pins.",
    "title": "Puck",
    "type": "object",
    "id": "Puck.json",
    "allOf": [
        {
            "$ref": "../core/LogisticalSample.json"
        }
    ],
    "$defs": {
        "PuckData": {
            "type": "object",
            "title": "Puck Data",
            "description": "Data for pucks containing mounted crystals on pins.",
            "allOf": [
                {
                    "$ref": "../core/MxlimsData.json"
                }
            ],
            "properties": {
                "mxlimsType": {
                    "const": "Puck",
                    "description": "The type of MXLIMS object.",
                    "title": "Mxlims Type",
                    "type": "string"
                },
                "barcode": {
                    "type": "string",
                    "description": "The Puck barcode or RFID code"
                },
                "numberPositions": {
                    "type": "integer",
                    "description": "The number of pin positions available.",
                    "minimum": 1
                }
            },
            "required": [
                "numberPositions"
            ]
        }
    },
    "properties": {
        "data": {
            "allOf": [
                {
                    "$ref": "#/$defs/PuckData"
                }
            ]
        },
        "contents": {
            "type": "array",
            "items": {
                "$ref": "../objects/Pin.json"
            },
            "minItems": 1
        }
    }
}
