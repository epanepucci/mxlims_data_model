{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "An independent Position within a Pin where crystals can be located.",
    "title": "RawPinPosition",
    "type": "object",
    "id": "RawPinPosition.json",
    "allOf": [
        {
            "$ref": "../core/LogisticalSample.json"
        }
    ],
    "properties": {
        "mxlimsType": {
            "const": "PinPosition",
            "description": "The type of MXLIMS object.",
            "title": "Mxlims Type",
            "type": "string"
        },
        "positionInPin": {
            "type":"integer",
            "description":"The pin position within  the pin. This should be validated against the pin's numberPositions property.",
            "minimum": 1,
            "examples":[4]
        }
    },
    "required": [
        "positionInPin"
    ]
}
