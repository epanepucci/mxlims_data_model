{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Line",
    "id": "Line.json",
    "description": "A straight line marked on an image or in absolute plate space.",
    "properties": {
        "regionType": {
            "const": "line",
            "title": "Region type",
            "description": "Type of region",
            "type": "string"
        },
        "points": {
            "type": "array",
            "items": {
                "$ref": "../datatypes/Point.json"
            },
            "minItems": 2,
            "maxItems": 2
        }
    },
    "required": [
        "regionType",
        "points"
    ]
}